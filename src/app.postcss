@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	h1 {
		@apply text-2xl font-light;
	}

	h2 {
		@apply text-xl;
	}

	th,
	td {
		@apply border-b border-gray-400 px-7 py-4;
	}

	td {
		@apply font-light text-center;
	}

	th {
		@apply font-semibold;
	}

	button {
		@apply border border-gray-200 rounded-lg bg-gray-50 font-semibold text-gray-400 shadow-md hover:bg-gray-400 hover:text-gray-50;
	}
}
